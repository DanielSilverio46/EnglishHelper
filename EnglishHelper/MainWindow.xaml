<Window x:Class="EnglishHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnglishHelper"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <Grid>
        <Label x:Name="English" Content="" HorizontalAlignment="Center" VerticalAlignment="Top" />
        <Label x:Name="PointsLabel" Content="Points: " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="82,58,0,0" />
        <Label x:Name="FailsLabel" Content="Fails: " HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,58,86,0" />

        <TextBox x:Name="InputWordPortuguese" Height="20" Width="100" KeyDown="CatchKeyEnter" HorizontalAlignment="Center" VerticalAlignment="Center" />

        <Button Content="Ok" Width="40" HorizontalAlignment="Right" VerticalAlignment="Top" Click="OkPressed" Margin="0,259,80,0" />
        <Button Content="Words" Width="40" HorizontalAlignment="Left" VerticalAlignment="Top" Click="WordsPressed" Margin="90,259,0,0" />
    </Grid>
</Window>
